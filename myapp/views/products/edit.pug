extends ../layout

block content 
    h1 Add new Products
    form(action="/products/Edit/"+product.id,method="post")
        .form-group
                label(for="Name") Products Name
                input#name(type="text",class="form-control",name="Name",value=product.Name)
        .form-group
                label(for="Price") Products Price
                input#price(type="text",class="form-control",name="Price",value=product.Price)
        .form-group
                label(for="Description") Products Description
                input#price(type="text",class="form-control",name="Description",value=product.Description)
        .form-group
                label(for="Status") Products Status
                input#price(type="text",class="form-control",name="Status",value=product.Status)
       
        
        input(type="submit",class="btn btn-info")
                
                

